    <script>
        // Toggle sidebar on mobile
        document.querySelector('.menu-toggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('show');
        });

        // Toggle submenus
        const menuItems = document.querySelectorAll('.menu-item.has-submenu');
        menuItems.forEach(item => {
            item.addEventListener('click', function() {
                this.classList.toggle('expanded');
                const submenu = this.nextElementSibling;
                submenu.classList.toggle('show');
            });
        });

        // Switch between dashboard and POS views
        const dashboardBtn = document.querySelector('.sidebar-menu li:nth-child(2)');
        const dashboardPage = document.querySelector('.dashboard-page');
        const posPage = document.querySelector('.pos-page');

        dashboardBtn.addEventListener('click', function() {
            dashboardPage.classList.remove('d-none');
            posPage.classList.add('d-none');
            
            // Update active menu items
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });
            this.classList.add('active');
        });

        const posBtn = document.querySelector('.sidebar-menu li:nth-child(2)');
        posBtn.addEventListener('click', function() {
            dashboardPage.classList.add('d-none');
            posPage.classList.remove('d-none');
            
            // Update active menu items
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });
            this.classList.add('active');
        });

        // Product card click handler
        const productCards = document.querySelectorAll('.product-card');
        productCards.forEach(card => {
            card.addEventListener('click', function() {
                // In a real app, this would add the product to the cart
                this.classList.add('active');
                setTimeout(() => {
                    this.classList.remove('active');
                }, 200);
            });
        });

        // Quantity controls
        document.querySelectorAll('.quantity-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const input = this.parentElement.querySelector('.quantity-value');
                let value = parseInt(input.value);
                
                if (this.textContent === '+') {
                    value++;
                } else {
                    if (value > 1) value--;
                }
                
                input.value = value;
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // F1 - Focus search
            if (e.key === 'F1') {
                e.preventDefault();
                document.querySelector('.products-search input').focus();
            }
            
            // F2 - New sale
            if (e.key === 'F2') {
                e.preventDefault();
                dashboardPage.classList.add('d-none');
                posPage.classList.remove('d-none');
            }
            
            // F3 - Pay (when in POS)
            if (e.key === 'F3' && !posPage.classList.contains('d-none')) {
                e.preventDefault();
                alert('Paiement en cours...');
            }
            
            // ESC - Cancel/back
            if (e.key === 'Escape') {
                e.preventDefault();
                if (!posPage.classList.contains('d-none')) {
                    dashboardPage.classList.remove('d-none');
                    posPage.classList.add('d-none');
                }
            }
            
            // F5 - Refresh
            if (e.key === 'F5') {
                e.preventDefault();
                location.reload();
            }
        });

        // Responsive adjustments
        function handleResponsive() {
            if (window.innerWidth < 992) {
                document.querySelector('.menu-toggle').style.display = 'flex';
            } else {
                document.querySelector('.menu-toggle').style.display = 'none';
                document.querySelector('.sidebar').classList.remove('show');
            }
        }

        window.addEventListener('resize', handleResponsive);
        handleResponsive();
    </script>
</body>
</html>
